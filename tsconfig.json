{
  "compilerOptions": {
    "strict": true,
    "isolatedModules": true,
    "target": "ES2022",
    "module": "node16",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
